---

// Components
const { title, description, slug, author, image } = Astro.props; 

// Style
import '../styles/post-component.css'

---

<div class="post-container">
    <div class="post-image">
        <img src={image} alt={title} />
    </div>
    <div class="post-details">
        <div class="post-data">
            <h2>{title}</h2>
            <p class="description">{description}</p>
            <p class="author">De {author}</p>
        </div>
        <div class="post-link">
            <a href={slug}>Mai multe</a>
        </div>
    </div>
</div>