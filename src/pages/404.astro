---
import MainLayout from "../layouts/MainLayout.astro";

const title = "Page not found";
const description = "Welcome to the official website of LNP Books.";
const url = "https://books.lnp-group.com";
const locale = "en-US";
const image = "/images/esu-timeline.png";
export const aboutSlug = "about";

// CSS
import '../styles/global.css';
import '../styles/404.css'


---

<MainLayout
	title={title}
	description={description}
	url={url}
	locale={locale}
	image={image}
>
<div class="error-404">
	<div class="header">
		<h1>Page not found.</h1>
	</div>
	<div id="main" class="main">
		The page you were trying to access does not exist.
		<a href="/">Go back home</a>
	</div>
</div>

</MainLayout>