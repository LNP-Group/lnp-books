---
import MainLayout from "../layouts/MainLayout.astro";

const title = "Page not found";
const description = "Welcome to the official website of LNP Books.";
const url = "https://books.lnp-group.com";
const locale = "en-US";
const image = "/images/esu-timeline.png";
export const aboutSlug = "about";

// CSS
import '../styles/global.css';
import '../styles/404.scss'


---

<MainLayout
	title={title}
	description={description}
	url={url}
	locale={locale}
	image={image}
>
<div class="error-404">
	<div class="glitch-text">
		<div class="stack" style="--stacks: 3;">
			<span style="--index: 0;">404</span>
			<span style="--index: 1;">404</span>
			<span style="--index: 2;">404</span>
		</div>
		<h2>Page not found</h2>
		<p>Sorry, the page you are looking for does not exist.</p>
		<a href="/">Go back to home</a>
	</div>
	<img class="logo-404" src="/favicon.svg" alt="LNP Books" />
</div>

</MainLayout>