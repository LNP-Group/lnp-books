---
import MainLayout from "../../../../layouts/MainLayoutRo.astro";


// SEO

const title = "Thor | Ethereal Superheroes Universe";
const description = "Thor, zeul nordic al tunetelor, trebuie să se ocupe de niște probleme de pe Pământ.";
const url = "https://books.lnp-group.com/ro-ro/cărți/ues/thor";
const locale = "ro-RO";
const image = "/images/thor.png";

// CSS
import '../../../../styles/global.css';
import '../../../../styles/book.css';


---

<MainLayout
	title={title}
	description={description}
	url={url}
	locale={locale}
	image={image}
    alternateUrls={{
		"en": "https://books.lnp-group.com/books/esu/thor",
		"us": "https://books.lnp-group.com/en-us/books/esu/thor",
		"ro": "https://books.lnp-group.com/ro-ro/cărți/ues/thor"
	}}
>
<div class="books">
	<div class="header">
		<h1>Thor</h1>
	</div>
	<div id="main" class="main">
		<div class="book">
            <div class="book-cover">
                <img src="/images/thor.png" alt="Thor promotional image" />
            </div>
            <div class="book-info">
                <p><span class="info-box">Titlu:</span> Thor</p>
                <p><span class="info-box">Autor:</span> <a href="/ro-ro/autori/cioarec-stelian">Cioarec Stelian</a></p>
                <p><span class="info-box">Sinopsis:</span> <i>Thor, zeul nordic al tunetelor, trebuie să se ocupe de niște probleme de pe Pământ.</i></p>
                <p><span class="info-box">Dată de Lansare:</span> AFA</p>
                <p><span class="info-box">Nr. de Pagini:</span> AFA</p>
                <p><span class="info-box">Serie:</span> <a href="/ro-ro/cărți/ues">Universul Eteric de Supereroi</a></p>
            </div>
            <div class="book-details">
                <h2>Personaje</h2>
                <ul class="book-details-list">
                    <li class="character">
                        Thor
                    </li>
                </ul>
                <h2>Locații</h2>
                <ul class="book-details-list">
                    <li>
                        Pământ
                    </li>
                    <li>
                        Asgard
                    </li>
                </ul>
                <h2>Obiecte</h2>
                <ul class="book-details-list">
                    <li>
                        Mjolnir
                    </li>
                </ul>
                <h2>Link-uri</h2>
                <ul class="book-details-list">
                    <li>
                        Link-uri sociale
                        <ul class="book-details-list">
                            <li>
                                <a href="https://www.instagram.com/ESUniverseThor/" target="_blank">
                                    Instagram
                                </a>
                            </li>
                            <li>
                                <a href="https://www.facebook.com/ESUThor/" target="_blank">
                                    Facebook
                                </a>
                            </li>
                            <li>
                                <a href="https://twitter.com/ESUThor/" target="_blank">
                                    Twitter
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
	</div>
</div>
</MainLayout>