---
import MainLayout from "../../../../layouts/MainLayout.astro";


// SEO

const title = "Etericii | Universul Eteric de Supereroi";
const description = "Eroii noștrii se unesc pentru prima dată pentru a lupta o amenințare necunoscută ce atacă Pământul.";
const url = "https://books.lnp-group.com/ro-ro/cărți/etericii";
const locale = "ro-RO";
const image = "/images/the-ethereals.png";

// CSS
import '../../../../styles/global.css';
import '../../../../styles/book.css';


---

<MainLayout
	title={title}
	description={description}
	url={url}
	locale={locale}
	image={image}
    alternateUrls={{
		"en": "https://books.lnp-group.com/books/esu/the-ethereals",
		"us": "https://books.lnp-group.com/en-us/books/esu/the-ethereals",
		"ro": "https://books.lnp-group.com/ro-ro/cărți/ues/etericii"
	}}
>
<div class="books">
	<div class="header">
		<h1>Etericii</h1>
	</div>
	<div id="main" class="main">
		<div class="book">
            <div class="book-cover">
                <img src="/images/the-ethereals.png" alt="The Ethereals promotional image" />
            </div>
            <div class="book-info">
                <p><span class="info-box">Titlu:</span> Etericii</p>
                <p><span class="info-box">Autor:</span> <a href="/ro-ro/autori/cioarec-stelian">Cioarec Stelian</a></p>
                <p><span class="info-box">Synopsis:</span> <i>Eroii noștrii se unesc pentru prima dată pentru a lupta o amenințare necunoscută ce atacă Pământul.</i></p>
                <p><span class="info-box">Dată de Lansare:</span> AFA</p>
                <p><span class="info-box">Nr. de Pagini:</span> AFA</p>
                <p><span class="info-box">Serie:</span> <a href="/ro-ro/cărți/ues">Universul Eteric de Supereroi</a></p>
            </div>
            <div class="book-details">
                <h2>Personaje</h2>
                <ul class="book-details-list">
                    <li class="character">
                        Fulgerul Violet
                    </li>
                    <li class="character">
                        Thor
                    </li>
                    <li class="character">
                        Madame Wilhelmina
                    </li>
                    <li class="character">
                        Doctor Hex
                    </li>
                    <li class="character">
                        Fantoma
                    </li>
                </ul>
                <h2>Locații</h2>
                <ul class="book-details-list">
                    <li>
                        Pământul
                    </li>
                </ul>
                <h2>Items</h2>
                <ul class="book-details-list">
                    <li>
                        Mjolnir
                    </li>
                    <li>
                        Costumul Fulgerului Violet
                    </li>
                </ul>
                <h2>Link-uri</h2>
                <ul class="book-details-list">
                    <li>
                        Link-uri sociale
                        <ul class="book-details-list">
                            <li>
                                <a href="https://www.instagram.com/ESUEthereals/" target="_blank">
                                    Instagram
                                </a>
                            </li>
                            <li>
                                <a href="https://www.facebook.com/ESUEthereals/" target="_blank">
                                    Facebook
                                </a>
                            </li>
                            <li>
                                <a href="https://twitter.com/ESUEthereals/" target="_blank">
                                    Twitter
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
	</div>
</div>
</MainLayout>